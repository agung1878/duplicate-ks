<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="bottom"
    android:orientation="vertical"
    style="@style/DefaultLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.registrasi.RegisterInformasiUmumFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/scrollView2">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp">

            <LinearLayout style="@style/LayoutFillParent"
                android:orientation="vertical"
                android:gravity="top"
                android:padding="20dp">
                <TextView style="@style/Text"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black_primary_text"
                    android:text="Informasi Umum" />

                <View style="@style/Line.Grey" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_lbl_phone"
                        style="@style/FloatingLabel"
                        app:errorTextAppearance="@style/EditTextError">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/input_txt_upload_ktp"
                            style="@style/EditText"
                            android:textSize="13dp"
                            android:hint="Upload KTP" />
                    </android.support.design.widget.TextInputLayout>

                    <ImageButton
                        android:id="@+id/btn_pick_image"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="12dp"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/baseline_note_add_24" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:id="@+id/image_thumbnail"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="50dp"
                        android:visibility="gone"/>

                </RelativeLayout>

                <View style="@style/WhiteSpaceVertical" />

                <android.support.design.widget.TextInputLayout
                    style="@style/FloatingLabel"
                    app:errorTextAppearance="@style/EditTextError"
                    android:id="@+id/input_lbl_no_ktp">
                    <android.support.design.widget.TextInputEditText
                        style="@style/EditText"
                        android:hint="No KTP"
                        android:textSize="13dp"
                        android:id="@+id/input_txt_no_ktp"/>
                </android.support.design.widget.TextInputLayout>

                <View style="@style/WhiteSpaceVertical" />

                <android.support.design.widget.TextInputLayout
                    style="@style/FloatingLabel"
                    app:errorTextAppearance="@style/EditTextError"
                    android:id="@+id/input_lbl_nama_lengkap">
                    <android.support.design.widget.TextInputEditText
                        style="@style/EditText"
                        android:hint="Nama Lengkap"
                        android:textSize="13dp"
                        android:id="@+id/input_txt_nama_lengkap"/>
                </android.support.design.widget.TextInputLayout>

                <View style="@style/WhiteSpaceVertical" />

                <android.support.design.widget.TextInputLayout
                    style="@style/FloatingLabel"
                    app:errorTextAppearance="@style/EditTextError"
                    android:id="@+id/input_lbl_nama_ibu">
                    <android.support.design.widget.TextInputEditText
                        style="@style/EditText"
                        android:textSize="13dp"
                        android:hint="Nama Ibu Kandung"
                        android:id="@+id/input_txt_nama_ibu"/>
                </android.support.design.widget.TextInputLayout>

                <View style="@style/WhiteSpaceVertical" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_lbl_tempat_lahir"
                    style="@style/FloatingLabel"
                    app:errorTextAppearance="@style/EditTextError">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_txt_tempat_lahir"
                        style="@style/EditText"
                        android:textSize="13dp"
                        android:hint="Tempat Lahir" />
                </android.support.design.widget.TextInputLayout>

                <View style="@style/WhiteSpaceVertical" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_lbl_tgl_lahir"
                        style="@style/FloatingLabel"
                        app:errorTextAppearance="@style/EditTextError">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/input_txt_tgl_lahir"
                            style="@style/EditText"
                            android:textSize="13dp"
                            android:hint="Tanggal Lahir" />
                    </android.support.design.widget.TextInputLayout>

                    <ImageButton
                        android:id="@+id/btn_pick_date"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="12dp"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/ic_date_black_24dp" />
                </RelativeLayout>

                <View style="@style/WhiteSpaceVertical" />

                <android.support.design.widget.TextInputLayout
                    style="@style/FloatingLabel"
                    app:errorTextAppearance="@style/EditTextError"
                    android:id="@+id/input_lbl_email">
                    <android.support.design.widget.TextInputEditText
                        style="@style/EditText"
                        android:hint="Email"
                        android:textSize="13dp"
                        android:id="@+id/input_txt_email"/>
                </android.support.design.widget.TextInputLayout>

                <View style="@style/WhiteSpaceVertical" />

                <android.support.design.widget.TextInputLayout
                    style="@style/FloatingLabel"
                    app:errorTextAppearance="@style/EditTextError"
                    android:id="@+id/input_lbl_no_hp">
                    <android.support.design.widget.TextInputEditText
                        style="@style/EditText"
                        android:hint="No Hp"
                        android:textSize="13dp"
                        android:id="@+id/input_txt_no_hp"/>
                </android.support.design.widget.TextInputLayout>

                <View style="@style/WhiteSpaceVertical" />

                <RadioGroup
                    style="@style/Text"
                    android:orientation="horizontal"
                    android:id="@+id/rg_jenis_kelamin">

                    <TextView
                        style="@style/Text"
                        android:textColor="@color/black_primary_text"
                        android:text="Jenis Kelamin : "/>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Laki-laki"
                        android:id="@+id/rb_laki"/>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Perempuan"
                        android:id="@+id/rb_perempuan"/>
                </RadioGroup>

                <View style="@style/WhiteSpaceVertical" />

                <android.support.design.widget.TextInputLayout
                    style="@style/FloatingLabel"
                    app:errorTextAppearance="@style/EditTextError"
                    android:id="@+id/input_lbl_pendapatan">
                    <AutoCompleteTextView
                        style="@style/Spinner"
                        android:hint="Pendapatan"
                        android:textSize="13dp"
                        android:id="@+id/input_txt_pendapatan"/>
                </android.support.design.widget.TextInputLayout>

                <View style="@style/WhiteSpaceVertical" />

                <android.support.design.widget.TextInputLayout
                    style="@style/FloatingLabel"
                    app:errorTextAppearance="@style/EditTextError"
                    android:id="@+id/input_lbl_pekerjaan">
                    <AutoCompleteTextView
                        style="@style/Spinner"
                        android:textSize="13dp"
                        android:hint="Pekerjaan"
                        android:id="@+id/input_txt_pekerjaan"/>
                </android.support.design.widget.TextInputLayout>

                <View style="@style/WhiteSpaceVertical" />
                <View style="@style/WhiteSpaceVertical" />
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </ScrollView>

</LinearLayout>