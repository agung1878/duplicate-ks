<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DefaultLayout"
    tools:context=".ui.fragments.GantiPinFragment">

    <View style="@style/WhiteSpaceVertical" />

    <android.support.design.widget.TextInputLayout
        style="@style/FloatingLabel"
        app:errorTextAppearance="@style/EditTextError"
        android:id="@+id/input_lbl_pin_lama">
        <android.support.design.widget.TextInputEditText
            style="@style/EditText"
            android:hint="Pin Lama"
            android:id="@+id/input_txt_pin_lama"/>
    </android.support.design.widget.TextInputLayout>

    <View style="@style/WhiteSpaceVertical" />

    <android.support.design.widget.TextInputLayout
        style="@style/FloatingLabel"
        app:errorTextAppearance="@style/EditTextError"
        android:id="@+id/input_lbl_pin_baru">
        <android.support.design.widget.TextInputEditText
            style="@style/EditText"
            android:hint="Pin Baru"
            android:id="@+id/input_txt_pin_baru"/>
    </android.support.design.widget.TextInputLayout>

    <View style="@style/WhiteSpaceVertical" />

    <android.support.design.widget.TextInputLayout
        style="@style/FloatingLabel"
        app:errorTextAppearance="@style/EditTextError"
        android:id="@+id/input_lbl_konfirmasi_pin">
        <android.support.design.widget.TextInputEditText
            style="@style/EditText"
            android:hint="Konfirmasi Pin"
            android:id="@+id/input_txt_konfirmasi_pin"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        style="@style/LayoutFillParent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:paddingBottom="16dp">
        <Button style="@style/TealButton"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Simpan"
            android:id="@+id/btn_simpan"/>
    </LinearLayout>
</LinearLayout>