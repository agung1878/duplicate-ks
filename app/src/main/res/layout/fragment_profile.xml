<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".ui.fragments.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="353dp"
            android:layout_marginTop="-20dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="30dp"
                android:text="Profile"
                android:textColor="#fff"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="70dp"
                android:src="@drawable/ic_edit_profile" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/user100" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="90dp"
                android:text="Abdul Rahman Agung"
                android:textColor="#fff"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="120dp"
                android:text="User Interface Designer"
                android:textColor="#fff"
                android:textSize="12dp"
                android:textStyle="bold" />
        </android.support.design.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/profile_username_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:text="Username" />

            <View style="@style/Line.Grey"
                android:layout_below="@id/profile_username"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:id="@+id/profile_email_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_username_tag"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:text="Email" />

            <View style="@style/Line.Grey"
                android:layout_below="@id/profile_email"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:id="@+id/profile_no_tlp_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_email_tag"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:text="No. Handphone" />

            <View style="@style/Line.Grey"
                android:layout_below="@id/profile_no_tlp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:id="@+id/profile_jenis_kelamin_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_no_tlp_tag"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:text="Jenis Kelamin" />

            <View style="@style/Line.Grey"
                android:layout_below="@id/profile_jenis_kelamin"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:id="@+id/profile_tgl_lahir_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_jenis_kelamin_tag"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:text="Tanggal Lahir" />

            <View style="@style/Line.Grey"
                android:layout_below="@id/profile_tgl_lahir"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="40dp"
                android:text="agung6969" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_username"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:text="agung6969@gmail.com" />

            <TextView
                android:id="@+id/profile_no_tlp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_email"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:text="081312501996" />

            <TextView
                android:id="@+id/profile_jenis_kelamin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_no_tlp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:text="Laki - laki" />

            <TextView
                android:id="@+id/profile_tgl_lahir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_jenis_kelamin"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:text="16 - April - 1999" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>