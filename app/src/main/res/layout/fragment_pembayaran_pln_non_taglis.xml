<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/DefaultLayout"
    tools:context=".ui.fragments.PembayaranPlnNonTaglisFragment">

    <View style="@style/WhiteSpaceVertical" />

    <android.support.design.widget.TextInputLayout
        style="@style/FloatingLabel"
        app:errorTextAppearance="@style/EditTextError"
        android:id="@+id/input_lbl_no_registrasi_non_taglis">
        <android.support.design.widget.TextInputEditText
            style="@style/EditText"
            android:hint="Nomor Registrasi"
            android:id="@+id/input_txt_no_registrasi_non_taglis"/>
    </android.support.design.widget.TextInputLayout>

    <View style="@style/WhiteSpaceVertical" />

    <android.support.design.widget.TextInputLayout
        style="@style/FloatingLabel"
        app:errorTextAppearance="@style/EditTextError"
        android:id="@+id/input_lbl_pin_non_taglis">
        <android.support.design.widget.TextInputEditText
            style="@style/EditText"
            android:hint="PIN"
            android:id="@+id/input_txt_pin_non_taglis"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        style="@style/LayoutFillParent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:paddingBottom="@dimen/layout_padding">
        <Button style="@style/AmberButton"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Test Koneksi"
            android:textSize="9dp"
            android:id="@+id/btn_test_koneksi_non_taglis"/>
        <View style="@style/WhiteSpaceHorizontal" />
        <Button style="@style/TealButton"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Cek Status"
            android:textSize="9dp"
            android:id="@+id/btn_cek_status_non_taglis"/>
        <View style="@style/WhiteSpaceHorizontal" />
        <Button style="@style/TealButton"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Kirim"
            android:textSize="9dp"
            android:id="@+id/btn_kirim_non_taglis"/>
    </LinearLayout>

</LinearLayout>