<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DefaultLayout"
    tools:context=".ui.fragments.PembelianVoucherPaketFragment">

    <View style="@style/WhiteSpaceVertical" />

    <android.support.design.widget.TextInputLayout
        style="@style/FloatingLabel"
        app:errorTextAppearance="@style/EditTextError"
        android:id="@+id/input_lbl_jenis_voucher">
        <AutoCompleteTextView
            style="@style/Spinner"
            android:hint="Jenis Voucher"
            android:id="@+id/input_txt_jenis_voucher"/>
    </android.support.design.widget.TextInputLayout>

    <View style="@style/WhiteSpaceVertical" />

    <android.support.design.widget.TextInputLayout
        style="@style/FloatingLabel"
        app:errorTextAppearance="@style/EditTextError"
        android:id="@+id/input_lbl_nominal">
        <AutoCompleteTextView
            style="@style/Spinner"
            android:hint="Nominal"
            android:id="@+id/input_txt_nominal"/>
    </android.support.design.widget.TextInputLayout>

    <View style="@style/WhiteSpaceVertical" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_lbl_phone"
            style="@style/FloatingLabel"
            app:errorTextAppearance="@style/EditTextError">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_txt_phone"
                style="@style/EditText"
                android:hint="Nomor Handphone" />
        </android.support.design.widget.TextInputLayout>

        <ImageButton
            android:id="@+id/btn_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_contacts_bg" />

    </RelativeLayout>

    <View style="@style/WhiteSpaceVertical" />

    <android.support.design.widget.TextInputLayout
        style="@style/FloatingLabel"
        app:errorTextAppearance="@style/EditTextError"
        android:id="@+id/input_lbl_pin">
        <android.support.design.widget.TextInputEditText
            style="@style/EditText"
            android:hint="Pin"
            android:id="@+id/input_txt_pin"/>
    </android.support.design.widget.TextInputLayout>

    <View style="@style/WhiteSpaceVertical" />

    <LinearLayout
        style="@style/LayoutFillParent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:paddingBottom="@dimen/layout_padding">
        <Button style="@style/AmberButton"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Test Koneksi"
            android:id="@+id/btn_test_koneksi"/>
        <View style="@style/WhiteSpaceHorizontal" />
        <Button style="@style/TealButton"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Cek Status"
            android:id="@+id/btn_cek_status"/>
        <View style="@style/WhiteSpaceHorizontal" />
        <Button style="@style/RedButton"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Kirim"
            android:id="@+id/btn_kirim"/>
    </LinearLayout>

</LinearLayout>