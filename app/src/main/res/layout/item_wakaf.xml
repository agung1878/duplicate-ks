<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical"
    android:id="@+id/item_wakaf">


    <android.support.v7.widget.CardView
        style="@style/ComponentLayout"
        android:id="@+id/cv_wakaf">
        <LinearLayout style="@style/ComponentLayout"
            android:orientation="vertical">
            <TextView style="@style/Text.Headline"
                android:textSize="15dp"
                android:id="@+id/tv_title_wakaf"
                android:text="1. wakaf" />
            <View style="@style/Line.Grey" />
            <TextView style="@style/Text"
                android:id="@+id/tv_desc_wakaf"
                android:text="description wakaf"/>
            <android.support.design.widget.TextInputLayout
                style="@style/FloatingLabel"
                app:errorTextAppearance="@style/EditTextError"
                android:id="@+id/input_lbl_wakaf">
                <android.support.design.widget.TextInputEditText
                    style="@style/EditText"
                    android:textSize="13dp"
                    android:inputType="number"
                    android:id="@+id/input_txt_wakaf"/>
            </android.support.design.widget.TextInputLayout>
            <TextView style="@style/Text"
                android:id="@+id/tv_nominal_wakaf"
                android:text="Rp. 0 "/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <View style="@style/WhiteSpaceVertical" />
</LinearLayout>