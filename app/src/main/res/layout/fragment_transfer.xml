<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DefaultLayout"
    tools:context=".ui.fragments.TransferFragment">

    <View style="@style/WhiteSpaceVertical" />

    <android.support.v7.widget.CardView
        style="@style/ComponentLayout"
        android:id="@+id/mn_transfer_sesama_anggota">
        <LinearLayout style="@style/ComponentLayout"
            android:orientation="vertical">
            <TextView style="@style/Text.Headline"
                android:text="Sesama Anggota"/>
            <View style="@style/Line.Grey" />
            <TextView style="@style/Text"
                android:text="Transfer dana ke rekening di sesama anggota" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <View style="@style/WhiteSpaceVertical" />

    <android.support.v7.widget.CardView
        style="@style/ComponentLayout"
        android:id="@+id/mn_transfer_antar_koperasi" >
        <LinearLayout style="@style/ComponentLayout"
            android:orientation="vertical">
            <TextView style="@style/Text.Headline"
                android:text="Antar Koperasi"/>
            <View style="@style/Line.Grey" />
            <TextView style="@style/Text"
                android:text="Transfer dana ke rekening antar koperasi" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>