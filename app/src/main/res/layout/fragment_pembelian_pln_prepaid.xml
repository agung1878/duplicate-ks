<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DefaultLayout"
    tools:context=".ui.fragments.PembelianPlnPrepaidFragment">

    <View style="@style/WhiteSpaceVertical" />

    <android.support.design.widget.TextInputLayout
        style="@style/FloatingLabel"
        app:errorTextAppearance="@style/EditTextError"
        android:id="@+id/input_lbl_id_pelanggan">
        <android.support.design.widget.TextInputEditText
            style="@style/EditText"
            android:hint="ID Pelanggan"
            android:id="@+id/input_txt_id_pelanggan"/>
    </android.support.design.widget.TextInputLayout>

    <View style="@style/WhiteSpaceVertical" />

    <android.support.design.widget.TextInputLayout
        style="@style/FloatingLabel"
        app:errorTextAppearance="@style/EditTextError"
        android:id="@+id/input_lbl_pin">
        <android.support.design.widget.TextInputEditText
            style="@style/EditText"
            android:hint="Pin"
            android:id="@+id/input_txt_pin"/>
    </android.support.design.widget.TextInputLayout>

    <View style="@style/WhiteSpaceVertical" />

    <LinearLayout
        style="@style/LayoutFillParent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:paddingBottom="@dimen/layout_padding">
        <Button style="@style/AmberButton"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Test Koneksi"
            android:id="@+id/btn_test_koneksi"/>
        <View style="@style/WhiteSpaceHorizontal" />
        <Button style="@style/TealButton"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Cek Status"
            android:id="@+id/btn_cek_status"/>
        <View style="@style/WhiteSpaceHorizontal" />
        <Button style="@style/RedButton"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Kirim"
            android:id="@+id/btn_kirim"/>
    </LinearLayout>

</LinearLayout>